@model NameGenMvcApp.Models.UserResponse

@{
    Layout = null;
}

<!DOCTYPE html>


<html>

<head>
    <link href="~/bootstrap-3.3.7-dist/css/bootstrap.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Fantasy Name Generator</title>
</head>

<body>
    <style>
        body {
            background-color: Black;
        }
        p {
            padding: 30px;
        }
        h1 {
            color: #F8F8FF; @*GHOSTWHITE*@
            font-weight: 300
        }
        span.dd-headings {
            font-weight: 500;
            font-size: medium;
            color: WHITE;
            margin: 20px 5px 10px 15px;
        }
        .dropdown {
            color: white;
            background-color: black;
            font-weight: bold;
            opacity: 1;
            border: 2px solid white;
            margin-right: 20px;
            cursor: pointer;
            height: 30px;
        }
        .button1 {
            background-color: black;
            color: white;
            font-weight: bold;
            opacity: 1;
            border: 2px solid white;
            margin-left: 20px;
            margin-top:10px;
            margin-bottom:10px;
            height:30px;
        }
        .icon {
            width:32px; 
            height:32px;
            padding: 5px;
        }
        span.name {
            font-size: large;
        }

        span.copyright {
            font-size: small;
            color: #333333;
            position: absolute;
            bottom: 5px;
            right: 12px;
        }
    </style>
    <div>
        <span class="copyright">
            Copyright 2017 Erik Ring-Walters
        </span>
    </div>
    <center>

        <h1>Fantasy Name Generator</h1>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <p>
                <div class="row">
                    <span class="dd-headings"> Race:</span>


                    @Html.DropDownListFor(x => x.Race, new[]
{
           new SelectListItem()
        {
            Text = "Any",
           Value = "Any"},
           new SelectListItem()
        {
            Text = "Human",
           Value = "Human"},
           new SelectListItem()
        {
            Text = "Elf",
           Value = "Elf"},
            new SelectListItem()
        {
            Text = "Orc",
           Value = "Orc" },
            new SelectListItem()
        {
            Text = "Dwarf",
           Value = "Dwarf"},
           }
            , new { @class = "dropdown" })

                    <span class="dd-headings">Sex:</span>

                    @Html.DropDownListFor(x => x.Sex, new[]
 {
           new SelectListItem()
    {
        Text = "Any",
           Value = "Any" },
           new SelectListItem()
    {
        Text = "Male",
           Value = "Male"},
           new SelectListItem()
    {
        Text = "Female",
           Value = "Female"}
}, new { @class = "dropdown" })

                    <button type="submit" class="button1">
                        Generate!
                    </button>
                </div>
            </p>

            <div class="row">
                <span class="name">
                <b>
                    <input type="text" value="@Model.GeneratedName" style="text-align:center;" /> 
                    @*
    <img src="http://www.iconsdb.com/icons/preview/color/F8F8FF/favorite-4-xxl.png" class="icon" alt="LIKE" title="I like this name"/>
    <img src="http://www.iconsdb.com/icons/preview/color/F8F8FF/trash-9-xxl.png" class="icon" alt="DISLIKE" title="I don't like this name"/>
                    *@
                    </b>
                </span>
            </div>
        }

        <span>
            @*@Html.ValueFor(x => x.GeneratedName) </br>*@
        </span>
    </center>


</body>
</html>
