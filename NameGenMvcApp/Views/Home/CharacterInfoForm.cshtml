@model NameGenMvcApp.Models.UserResponse

@{
    Layout = null;
}

<!DOCTYPE html>


<html>

<head>
    <link href="~/bootstrap-3.3.7-dist/css/bootstrap.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Fantasy Name Generator</title>
</head>

<body>
    <style>
        body {
            background-color: Black;
        }

        span.dd-headings {
            font-weight: 500;
            font-size: medium;
            color: WHITE;
            padding:20px 5px 5px 15px;
        }
        span.btn {
            padding:1cm 0.5cm;
        }
        span.name {
            font-size: large;
        }
        span.copyright {
            font-size: small;
            color: gray;
            position: absolute;
            bottom: 0;
            right: 0;
        }
    </style>
    <div>
        <span class="copyright">
            Copyright 2017 Erik Ring-Walters
        </span>
    </div>
    <center>

        <h1><font color="#ffbf00"><b>Fantasy Name Generator</b></font></h1>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <p>
                <span class="dd-headings"> Race:</span>
                    @Html.DropDownListFor(x => x.Race, new[]
{
            new SelectListItem() {Text = "Any",
           Value = "Any"},
           new SelectListItem() {Text = "Human",
           Value = "Human"},
           new SelectListItem() { Text = "Elf",
           Value = "Elf"},
            new SelectListItem() {Text = "Orc",
           Value = "Orc"},
           })
                    <span class="dd-headings">Sex:</span>

                    @Html.DropDownListFor(x => x.Sex, new[]
 {
               new SelectListItem() { Text = "Any",
              Value = "Any" },
           new SelectListItem() {Text = "Male",
           Value = "Male"},
           new SelectListItem() { Text = "Female",
           Value = "Female"}
           })
                    @*old button*@
                    @*<b> <input type="submit" value="Generate!" /> </b>*@

                    @*New Button*@
                <span class="btn">
                    <button type="submit" class="btn btn-secondary">
                        Generate!
                    </button>
                </span>
</p>


            <p>
                <!-- testing whitespace. -->
            </p>
            @*@Html.TextBoxFor(model => model.GeneratedName, new { style="width: 30 px;"});*@

            <span class="name"><b> <input type="text" value="@Model.GeneratedName" style="text-align:center;" /> </b></span>
        }

        <span>
            @*@Html.ValueFor(x => x.GeneratedName) </br>*@
        </span>
    </center>


</body>
</html>
